<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.carlos.dal.mapper.ItemInfoMapper">
    <resultMap id="resultMap" type="com.github.carlos.dal.bean.ItemInfoDO">

        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="item_name" property="itemName"/>
        <result column="item_num" property="itemNum"/>
        <result column="cover_img" property="coverImg"/>

        <result column="gmt_created" property="gmtCreated"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="is_del" property="isDel"/>
    </resultMap>

    <sql id="generalColumns">
        id,
        category_id,
        item_name,
        item_num,
        cover_img,
        gmt_created,
        gmt_modified,
        is_del

    </sql>

    <insert id="insertOrUpdate" useGeneratedKeys="true" keyProperty="id">
        insert into item_info (<include refid="generalColumns"/>)

        values (#{id},
        #{categoryId},
        #{itemName},
        #{itemNum},
        #{coverImg},
        now(),
        now(),
        0)
        on duplicate key update
        <trim suffixOverrides=",">
            category_id = VALUES(category_id),
            item_name = VALUES(item_name),
            item_num = VALUES(item_num),
            cover_img = VALUES(cover_img),
            is_del =0,
            gmt_modified=now()
        </trim>
    </insert>

    <select id="selectByParam" resultMap="resultMap">
        select
        <include refid="generalColumns"/>
        from item_info
        where is_del=0
        <if test="itemIds != null and !imageIds.isEmpty()">
            and id IN
            <foreach item="id" index="index" collection="itemIds" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>

        <if test="categoryId!=null">
            and category_id=#{categoryId}
        </if>

        <if test="startRow!=null ||pageSize!=null">
            limit #{startRow},#{pageSize}
        </if>

    </select>

    <select id="selectByCount" resultType="java.lang.Integer">
        select
        <include refid="generalColumns"/>
        from item_info
        where is_del=0
        <if test="imageIds != null and !imageIds.isEmpty()">
            and id IN
            <foreach item="id" index="index" collection="imageIds" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>


    </select>


    <update id="del">
       update item_info set is_del=0
        where
         id = #{id}

    </update>


</mapper>